<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button00"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_above="@+id/button10"
            android:layout_toLeftOf="@id/button01"
            android:layout_marginEnd="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button01"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_above="@+id/button11"
            android:layout_centerHorizontal="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button02"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_above="@+id/button12"
            android:layout_toEndOf="@id/button01"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button10"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_toLeftOf="@+id/button11"
            android:layout_marginEnd="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button11"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button12"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_toEndOf="@id/button11"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button20"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_below="@+id/button10"
            android:layout_toLeftOf="@id/button21"
            android:layout_marginEnd="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button21"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_below="@+id/button11"
            android:layout_centerHorizontal="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button22"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:fontFamily="@font/superbubble"
            android:text=""
            android:gravity="center"
            android:textSize="50sp"
            android:layout_below="@+id/button12"
            android:layout_toEndOf="@id/button21"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_below="@id/button21"
            android:text="Reset"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/superbubble"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeWidth="5dp"
            app:strokeColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_quit"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/button_reset"
            android:text="Quit"
            android:textSize="20sp"
            android:fontFamily="@font/superbubble"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeWidth="5dp"
            app:strokeColor="@color/white" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Single Player"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/superbubble" />

        <TextView
            android:id="@+id/text_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_title"
            android:layout_marginTop="50dp"
            android:text=""
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/superbubble" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>